generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Member {
  id        Int      @id @default(autoincrement())
  name      String
  birthDate DateTime
  category  String   @default("Sócio") // e.g., Sócio Proprietário, Dependente
  createdAt DateTime @default(now())
}

model Directorate {
  id        Int        @id @default(autoincrement())
  startYear Int
  endYear   Int
  directors Director[]
}

model Director {
  id            Int         @id @default(autoincrement())
  name          String
  role          String      // Presidente, Vice, Diretor de Esporte 1, etc.
  directorateId Int
  directorate   Directorate @relation(fields: [directorateId], references: [id])
}
